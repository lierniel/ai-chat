{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "baseUrl": "./",

        "paths": {
            "@bots/*": ["src/bots/*"],
            "@components/*": ["src/components/*"],
            "@consts/*": ["src/consts/*"],
            "@hooks/*": ["src/hooks/*"],
            "@services/*": ["src/services/*"],
            "@storage/*": ["src/storage/*"]

        },
    },
    "include": ["src/**/*", ".eslintrc.js", "webpack.config.js"],
    "exclude": ["node_modules", "dist"]
}